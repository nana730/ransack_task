<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<%= search_form_for @q do |f| %>
  <%= label_tag nil, 'キーワード' %>
  <%= f.search_field :title_or_description_cont %>
  <%= label_tag nil, '期間' %>
  <%= f.date_field :deadline_gteq %> <!-- 締め切り以降 -->
  <span>~</span>
  <%= f.date_field :deadline_lteq_end_of_day %> <!-- 締め切りまで -->

    <%= f.label :status %>
    <%= f.radio_button :status_eq, '', {:checked => true} %>指定なし
    <%= f.radio_button :status_eq, 0 %>to do
    <%= f.radio_button :status_eq, 1 %>doing
    <%= f.radio_button :status_eq, 3 %>done
  
   <%= f.submit '検索' %>
<%end%>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th><%= sort_link(@q, :deadline, "Deadline") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
